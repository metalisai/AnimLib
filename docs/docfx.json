{
  "metadata": [
    {
      "src": [
        {
          "src": "../AnimLib",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ],
        "src": ".."
      }
    ],
    "resources": [
      {
        "files": [
          "images/**",
          "../img/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "AnimLib",
      "_appTitle": "AnimLib - Programmatic animations",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
